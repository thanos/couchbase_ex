# CouchbaseEx Environment Variables
# Copy this file to .env and customize for your environment

# Couchbase Connection
# Couchbase Connection Settings
COUCHBASE_HOST=http://127.0.0.1:8091/
COUCHBASE_USER=Administrator
COUCHBASE_PASSWORD=password
COUCHBASE_BUCKET=default

# Test-specific credentials (optional, defaults to above if not set)
COUCHBASE_TEST_HOST=http://127.0.0.1:8091/
COUCHBASE_TEST_USER=Administrator
COUCHBASE_TEST_PASSWORD=password
COUCHBASE_TEST_BUCKET=default

# Timeouts (in milliseconds)
COUCHBASE_TIMEOUT=5000
COUCHBASE_CONNECTION_TIMEOUT=10000
COUCHBASE_QUERY_TIMEOUT=30000
COUCHBASE_OPERATION_TIMEOUT=5000

# Connection Pool
COUCHBASE_POOL_SIZE=10

# Zig Server Configuration
COUCHBASE_ZIG_SERVER_PATH=priv/bin/couchbase_zig_server
COUCHBASE_BUILD_ZIG_SERVER_ON_STARTUP=true

# Development/Test overrides
# Uncomment and modify as needed for your environment
# COUCHBASE_HOST=couchbase://192.168.1.100
# COUCHBASE_USER=myuser
# COUCHBASE_PASSWORD=mypassword
# COUCHBASE_BUCKET=my_bucket